            = f.collection_select :size_id, Size.all, :id, :name, prompt: "選択してください"
        .form-detail__brand
          .form-detail__brand__label
            %label ブランド
            %span 任意
          .form-detail__brand__input
            = f.collection_select :brand_id, Brand.all, :id, :name, prompt: "選択してください"
        .form-detail__status
          .form-detail__status__label
